{
    "compilerOptions": {
      "target": "ES2020",
      "module": "none",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "outDir": "./public/js",
      "rootDir": "./src/frontend",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "removeComments": false
    },
    "include": [
      "src/frontend/app.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "public",
      "src/frontend/types.ts"
    ]
  }
  